worker_processes  1;
error_log logs/error.log;
events {
    worker_connections 1024;
}
http {

  {{http_block}}

  {{#if init_by_lua}}
  init_by_lua '
    {{{init_by_lua}}}
  ';
  {{/if}}
  {{#if log_by_lua}}
  log_by_lua '
    {{{log_by_lua}}}
  ';
  {{/if}}

  server {
    listen 80;

    {{main_server_locations}}

    location /_users {
      proxy_pass http://auth-db:5984;
      proxy_redirect off;
      proxy_set_header Host $host;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location /_session {
      proxy_pass http://auth-db:5984;
      proxy_redirect off;
      proxy_set_header Host $host;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location /anonymous {
      proxy_pass http://anonymous-db:5984;
      proxy_redirect off;
      proxy_set_header Host $host;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location ~ ^/anonymous/_changes {
      proxy_pass http://anonymous-db:5984;
      proxy_redirect off;
      proxy_buffering off;
      proxy_set_header Host $host;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location /public {
      proxy_pass http://public-db:5984;
      proxy_redirect off;
      proxy_set_header Host $host;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location ~ ^/public/_changes {
      proxy_pass http://public-db:5984;
      proxy_redirect off;
      proxy_buffering off;
      proxy_set_header Host $host;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location /shared {
      proxy_pass http://shared-db:5984;
      proxy_redirect off;
      proxy_set_header Host $host;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location ~ ^/shared/_changes {
      proxy_pass http://shared-db:5984;
      proxy_redirect off;
      proxy_buffering off;
      proxy_set_header Host $host;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location /db {
      access_by_lua_file /usr/local/openresty/nginx/conf/check_authentication.lua;

      proxy_pass http://main-db:5984;
      proxy_redirect off;
      proxy_set_header Host $host;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header Authorization "";
    }

    location ~ ^/db/_changes {
      access_by_lua_file /usr/local/openresty/nginx/conf/sync_wrapper.lua;


      proxy_pass http://main-db:5984;
      proxy_redirect off;
      proxy_buffering off;
      proxy_set_header Host $host;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header Authorization "";
    }

  }


  {{servers}}


}
